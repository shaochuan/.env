#!/bin/bash

# Git installation
brew install git bash-completion
git config --global user.name "Shao-Chuan Wang"
git config --global user.email "shaochuan.wang@gmail.com"

# Scala and play
brew install scala
brew install typesafe-activator
brew install sbt

# Java related
brew install ant
brew install maven

# Pip
curl -O https://bootstrap.pypa.io/get-pip.py
sudo python get-pip.py

# python fabrics
sudo pip install paramiko==1.10
sudo pip install fabric

# Python ML-related
sudo pip install pandas==0.13.1